{% extends 'dashboard/dashboard.html.twig' %}

{% block title %}{{ "Events" | trans }}{% endblock %}

{% block display %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>{{ "events"|trans }}</h1>
            <a href="{{ path('app_event_create') }}" class="btn btn-success">{{ "add_new_event"|trans }}</a>
        </div>
        <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>{{ "name" | trans }}</th>
                <th>{{ "description" | trans }}</th>
                <th>{{ "date_from" | trans }}</th>
                <th>{{ "date_to" | trans }}</th>
                <th>{{ "actions" | trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.name }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.dateFrom|date('Y-m-d') }}</td>
                    <td>{{ event.dateTo|date('Y-m-d') }}</td>
                    <td>
                        <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning">{{ "Edit" | trans }}</a>
                        <a href="{{ path('app_event_delete', {'id': event.id}) }}" class="btn btn-danger" onclick="return confirm('{{ "Are you sure?" | trans }}');">{{ "Delete" | trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">{{ "no_records" | trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
