{% extends 'base.html.twig' %}

{% block title %}{{ "register"|trans }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-md-6">
            <h1 class="text-center mb-4">{{ "register"|trans }}</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

            <div class="form-group">
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.plainPassword, "password"|trans, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <br>

            <button type="submit" class="btn btn-primary btn-block">{{ "register"|trans }}</button>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}