{% extends 'dashboard/dashboard.html.twig' %}

{% block title %}{{ "Categories" | trans }}{% endblock %}

{% block display %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>{{ "categories"|trans }}</h1>
            <a href="{{ path('app_category_create') }}" class="btn btn-success">{{ "add_new_category"|trans }}</a>
        </div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>{{ "name" | trans }}</th>
                <th>{{ "actions" | trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for category in items %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">{{ "Edit" | trans }}</a>
                        <a href="{{ path('app_category_delete', {'id': category.id}) }}" class="btn btn-danger" onclick="return confirm('{{ "Are you sure?" | trans }}');">{{ "Delete" | trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">{{ "no_records" | trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
